##################################
# SERVER
##################################
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s

##################################
# DATABASE (PostgreSQL)
##################################
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_NAME=notifications
DB_SSL_MODE=disable

# Connection Pool
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h

##################################
# KAFKA CORE
##################################
KAFKA_BROKERS=localhost:9092
KAFKA_WRITE_TIMEOUT=10s
KAFKA_READ_TIMEOUT=10s
CONSUMER_GROUP=notification-consumer

##################################
# KAFKA TOPICS
##################################
KAFKA_TOPIC_EMAIL_HIGH=notifications.email.high
KAFKA_TOPIC_EMAIL_NORMAL=notifications.email.normal
KAFKA_TOPIC_EMAIL_LOW=notifications.email.low

KAFKA_TOPIC_SMS_HIGH=notifications.sms.high
KAFKA_TOPIC_SMS_NORMAL=notifications.sms.normal
KAFKA_TOPIC_SMS_LOW=notifications.sms.low

KAFKA_TOPIC_PUSH_HIGH=notifications.push.high
KAFKA_TOPIC_PUSH_NORMAL=notifications.push.normal
KAFKA_TOPIC_PUSH_LOW=notifications.push.low

KAFKA_TOPIC_DLQ=notifications.dlq

##################################
# OUTBOX WORKER
##################################
OUTBOX_POLL_INTERVAL=5s
OUTBOX_BATCH_SIZE=100

##################################
# WEBHOOK / HTTP (Consumer)
##################################
WEBHOOK_URL=https://your-webhook-url
HTTP_TIMEOUT=30s

##################################
# WORKER POOL (Fan-Out)
##################################
EMAIL_WORKERS=5
SMS_WORKERS=5
PUSH_WORKERS=5
QUEUE_SIZE=100

##################################
# RATE LIMITING
##################################
RATE_LIMIT_PER_SECOND=100

##################################
# RETRY POLICY
##################################
MAX_RETRIES=3
INITIAL_BACKOFF=1s
MAX_BACKOFF=30s
BACKOFF_MULTIPLIER=2.0

##################################
# IDEMPOTENCY
##################################
IDEMPOTENCY_TTL=24h

##################################
# GRACEFUL SHUTDOWN
##################################
SHUTDOWN_TIMEOUT=30s
